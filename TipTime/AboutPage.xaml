<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Image
            Source="github_logo.png"
            HeightRequest="250"
            Aspect="AspectFit"
            SemanticProperties.Description="logo do github" />
        <Label 
            Text="TipTime V1.0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="EnviarGitBtn"
            Text="Ir para o GitHub" 
            SemanticProperties.Hint="Vai para o GitHub"
            Clicked="EnviarGitBtn_Clicked"
            HorizontalOptions="Fill" 
            WidthRequest="400"
            HeightRequest="50" 
            Margin="30" />
        <Label 
            Text="Desenvolvido por: Pietro Borges"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>